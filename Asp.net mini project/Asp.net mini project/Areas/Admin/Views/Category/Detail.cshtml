@model CategoryDetailVM

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4">Category Details</h2>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Product Count</dt>
            <dd class="col-sm-9">@Model.ProductCount</dd>

            <dt class="col-sm-3">Create Date</dt>
            <dd class="col-sm-9">@Model.CreateDate.ToString("dd MMM yyyy HH:mm")</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
