@model AdvertisementDetailVM

<div class="mx-5 mt-5">
    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header">
            <h3>Advertisement Details</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="Img">Image</label>
                <img src="~/img/@Model.Img" alt="Advertisement Image" class="img-fluid" style="max-width: 100%; height: auto;" />
            </div>

            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" value="@Model.Title" readonly style="width: 100%; display: inline-block;" />
            </div>

            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
