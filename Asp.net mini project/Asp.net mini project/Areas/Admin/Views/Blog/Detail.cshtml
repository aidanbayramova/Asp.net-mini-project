@model BlogDetailVM

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-lg-8 col-md-10 col-sm-12">
        <div class="bg-white p-4 rounded shadow">

            <div class="row mb-4">
                <div class="col-md-8 col-sm-12">
                    <h2 class="tm-block-title d-inline-block">@Model.Title</h2>
                </div>
                <div class="col-md-4 col-sm-12 text-end">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>

            <div class="mb-4">
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd MMMM yyyy, HH:mm")</p>
            </div>

            <hr />

            <div class="mb-4">
                <strong>Blog Images:</strong>
                <div class="d-flex flex-wrap mt-2">
                    @if (Model.BlogImages != null && Model.BlogImages.Any())
                    {
                        foreach (var image in Model.BlogImages)
                        {
                            <div class="me-2 mb-2 position-relative">
                                <img src="@image.Img" alt="Blog image" class="img-thumbnail" style="width: 150px; height: auto;" />
                                @if (image.IsMain)
                                {
                                    <span class="badge bg-primary position-absolute top-0 start-0 m-1"></span>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No images found.</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
