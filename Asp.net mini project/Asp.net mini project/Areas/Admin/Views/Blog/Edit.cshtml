
@model BlogEditVM

@{
    ViewData["Title"] = "Blogu Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Title">Başlık</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Desc">Açıklama</label>
        <textarea class="form-control" id="Desc" name="Desc" rows="4" required>@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Değişiklikleri Kaydet</button>
</form>

<a href="@Url.Action("Index", "Blog")" class="btn btn-secondary mt-3">Geri Dön</a>


