@model ReviewDetailVM
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-xl-6 col-lg-8 tm-md-10 tm-sm-12 tm-col">
        <div class="bg-white tm-block p-5 rounded shadow">
            <h2 class="tm-block-title text-center mb-4">Review Details</h2>

            <div class="mb-4">
                <strong>Customer:</strong>
                <p class="border p-2 rounded bg-light">@Model.CustomerFullName</p>
            </div>

            <div class="mb-4">
                <strong>Profile Image:</strong><br />
                @if (!string.IsNullOrWhiteSpace(Model.CustomerProfileImg))
                {
                    <img src="~/img/@Model.CustomerProfileImg" alt="Profile Image" class="rounded-circle border mt-2" width="100" height="100" />
                }
                else
                {
                    <p class="mt-2">No Image Available</p>
                }
            </div>

            <div class="mb-4">
                <strong>Comment:</strong>
                <p class="border p-2 rounded bg-light">@Model.Comment</p>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
