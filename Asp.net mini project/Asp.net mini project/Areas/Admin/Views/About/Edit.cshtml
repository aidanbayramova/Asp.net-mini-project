@model AboutEditVM 

<div class="container">
    <h2>Edit About</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Title" style="color:white">Title</label>
            <textarea rows="4" cols="50" asp-for="Title" class="form-control" id="editor" placeholder="Title..."></textarea>
            <span asp-validation-for="Title" class="text-danger"></span> 
        </div>


        <div class="form-group">
            <label style="color:white">Current Image</label><br />
            <img src="@Model.Img" alt="Current Image" width="100" />
        </div>


        <div class="form-group">
            <label style="color:white" for="NewImg">New Image</label>
            <input asp-for="NewImg" type="file" class="form-control" />
            <span asp-validation-for="NewImg" class="text-danger"></span>
        </div>


        <div class="form-group mb-3">
            <label style="color:white" asp-for="Description" class="font-weight-bold">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="form-group mb-3">
            <label style="color:white" asp-for="VideoUrl" class="font-weight-bold">Video URL</label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
  
</div>
<script src="//cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor') 
</script>
