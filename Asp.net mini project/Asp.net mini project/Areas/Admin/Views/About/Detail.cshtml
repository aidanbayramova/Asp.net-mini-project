@model AboutDetailVM

<div class="container my-5">
    <div class="card shadow-lg" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header text-white">
            <h3 style="color:black" class="mb-0">About Details</h3>
        </div>
        <div class="card-body">

            <div class="mb-4 text-center">
                <label class="fw-bold d-block mb-2">Image</label>
                <img src="@Model.Img" alt="About Image" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
            </div>

            <div class="mb-3">
                <label class="fw-bold text-dark">Title</label>
                <div class="form-control bg-light" style="min-height: 80px;">
                    @Html.Raw(Model.Title)
                </div>
            </div>

            <div class="mb-3">
                <label class="fw-bold text-dark">Description</label>
                <div class="form-control bg-light" style="    min-height: 206px">
                    @Model.Description
                </div>
            </div>

            <div class="mb-3">
                <label class="fw-bold text-dark">Video URL</label>
                <div class="form-control bg-light">
                    @Model.VideoUrl
                </div>
            </div>

            
            @if (!string.IsNullOrWhiteSpace(Model.VideoUrl) && Model.VideoUrl.Contains("youtube"))
            {
                <div class="embed-responsive embed-responsive-16by9 mt-3">
                    <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen style="width:100%; height:315px; border:none;"></iframe>
                </div>
            }

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </div>
    </div>
</div>
