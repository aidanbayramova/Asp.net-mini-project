@model CustomerDetailVM

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-xl-8 col-lg-10 tm-md-12 tm-sm-12 tm-col">
        <div class="bg-white tm-block p-4 rounded shadow">
            <h2 class="tm-block-title text-center">Customer Details</h2>

            <div class="form-group mb-3">
                <label class="font-weight-bold">Full Name:</label>
                <p>@Model.FullName</p>
            </div>

            <div class="form-group mb-3">
                <label class="font-weight-bold">Profile Image:</label><br />
                <img src="~/img/@Model.ProfileImg" alt="Profile Image" class="rounded-circle shadow-sm" style="width: 150px; height: auto;" />
            </div>

            <h3 class="mt-4">Reviews</h3>
            @if (Model.Reviews.Any())
            {
                <div class="table-responsive mt-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model.Reviews)
                            {
                                <tr>
                                    <td>@review.Comment</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No reviews available for this customer.</p>
            }

            <div class="mt-3 d-flex gap-2 justify-content-end">
             
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
