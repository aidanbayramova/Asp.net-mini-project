@model TeamDetailVM

<div class="container my-5">
    <div class="card shadow-lg" style="max-width: 700px; margin: 0 auto;">
        <div class="card-header text-white">
            <h3 style="color:black" class="mb-0">Team Member Details</h3>
        </div>
        <div class="card-body">

            <div class="mb-4 text-center">
                <label class="fw-bold d-block mb-2">Image</label>
                <img src="@Model.Img" alt="Team Image" class="img-fluid rounded shadow-sm" style="max-height: 400px; max-width: 100%;" />

            </div>

            <div class="mb-3">
                <label class="fw-bold text-dark">Full Name</label>
                <div class="form-control bg-light" style="min-height: 60px;">
                    @Model.FullName
                </div>
            </div>

            <div class="mb-3">
                <label class="fw-bold text-dark">Position</label>
                <div class="form-control bg-light" style="min-height: 60px;">
                    @Model.Position
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </div>
    </div>
</div>
