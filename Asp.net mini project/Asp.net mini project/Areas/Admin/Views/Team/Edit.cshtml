@model TeamEditVM

<div class="container my-5">
    <div class="card shadow-lg p-4" style="max-width: 700px; margin: 0 auto;">
        <h2 class="text-center mb-4">Edit Team Member</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label text-dark">Full Name</label>
                <input asp-for="FullName" class="form-control" required placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Position" class="form-label text-dark">Position</label>
                <input asp-for="Position" class="form-control" required placeholder="Enter position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label text-dark">Current Image</label><br />
                <img src="@Model.Img" alt="Current Image" class="img-thumbnail" style="max-height: 250px;" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="NewImg" class="form-label text-dark">Upload New Image</label>
                <input asp-for="NewImg" type="file" class="form-control" />
                <span asp-validation-for="NewImg" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn px-4">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
