@model Asp.net_mini_project.ViewModels.Admin.Newsletter.NewsletterVM

<h2 style="text-align:center;margin-top:20px" class="text-white">
    Subscribers
</h2>

@if (Model != null && Model.Newsletters != null && Model.Newsletters.Any())
{
    <table class="table" style="color:white">
        <thead>
            <tr>
                <th>Email</th>
                <th>Subscribed At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Newsletters)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.CreateDate.ToString("g")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete??');">
                            <button type="submit" class="btn btn-sm btn-danger" style="outline: none; border: none;">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                            
                            <span asp-validation-for="Email" class="text-danger">ehhhhhhhhhhhhhhh</span> 
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-white">No subscribers yet..</p>
}