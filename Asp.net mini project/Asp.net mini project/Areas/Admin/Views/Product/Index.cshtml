@model IEnumerable<ProductVM>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-xl-10 col-lg-12 tm-md-12 tm-sm-12 tm-col">
        <div class="bg-white tm-block p-4 rounded shadow">
            <div class="row mb-4">
                <div class="col-md-8 col-sm-12">
                    <h2 class="tm-block-title d-inline-block">Products</h2>
                </div>
                <div class="col-md-4 col-sm-12 text-right">
                    <a asp-action="Create" class="btn btn-primary btn-sm">Add New Product</a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a  asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id">
                                        <img src="@Url.Content("~/images/" + item.Img)" alt="product image" width="100" height="100" style="cursor: pointer;" />
                                    </a>
                                </td>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>$@item.Price</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" title="View Details" class="mr-2">
                                        <i class="fa-solid fa-circle-info" style="cursor: pointer; font-size: 22px; color: blue;"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="mr-2">
                                        <i class="fa-solid fa-pencil" style="cursor: pointer; font-size: 22px; color: black;"></i>
                                    </a>
                                    <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <button type="submit" class="btn" style="background: transparent; border: none; padding: 0; outline: none; box-shadow: none;">
                                            <i class="fas fa-trash-alt text-danger" style="cursor: pointer; font-size: 22px;"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
