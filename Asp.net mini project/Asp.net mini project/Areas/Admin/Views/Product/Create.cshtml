@model ProductCreateVM

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-xl-8 col-lg-10 tm-md-12 tm-sm-12 tm-col">
        <div class="bg-white tm-block p-4 rounded shadow">
            <div class="row mb-4">
                <div class="col-md-8 col-sm-12">
                    <h2 class="tm-block-title d-inline-block">Add New Product</h2>
                </div>
                <div class="col-md-4 col-sm-12 text-right">
                    <a asp-action="Index" class="btn btn-light btn-sm">Back to Product List</a>
                </div>
            </div>

            <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Desc">Description</label>
                    <textarea asp-for="Desc" class="form-control"></textarea>
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CategoryId">Choose Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@(ViewBag.Categories as SelectList)">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label for="Images">Product Images</label>
                    <input asp-for="Images" type="file" class="form-control" id="products" multiple />
                    <span class="text-danger" asp-validation-for="Images"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
