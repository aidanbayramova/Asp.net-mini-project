@model IEnumerable<SliderInfoVM>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-xl-10 col-lg-12 tm-md-12 tm-sm-12 tm-col">
        <div class="bg-white tm-block p-4 rounded shadow">
            <div class="row mb-4">
                <div class="col-md-8 col-sm-12">
                    <h2 class="tm-block-title d-inline-block">Slider Infos</h2>
                </div>
                <div class="col-md-4 col-sm-12 text-right">
                    <a asp-action="Create" class="btn btn-primary btn-sm">Add New Slider Info</a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Discount</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" title="View Details" class="mr-2">
                                        <i class="fa-solid fa-circle-info" style="cursor: pointer; font-size: 25px; color: blue"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="mr-2">
                                        <i class="fa-solid fa-pencil" style="cursor: pointer; font-size: 25px; color: black"></i>
                                    </a>
                                    <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <button type="submit" class="btn" style="background: transparent; border: none; padding: 0;">
                                            <i class="fas fa-trash-alt text-danger" style="cursor: pointer; font-size: 25px;"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
