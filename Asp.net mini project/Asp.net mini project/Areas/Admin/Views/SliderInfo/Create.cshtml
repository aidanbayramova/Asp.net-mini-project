@using Asp.net_mini_project.ViewModels.Admin.SliderInfo
@model SliderInfoCreateVM

<div class="mx-5 mt-5">
    <form class="forms-sample" asp-action="Create" method="post">
        <div class="form-group">
            <label style="color:white" for="Title">Title</label>
            <input asp-for="Title" class="form-control" id="Title" maxlength="100" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label style="color:white" for="Discount">Discount</label>
            <input asp-for="Discount" class="form-control" id="Discount" maxlength="50" />
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>


        <div class="form-group">
            <label style="color:white" for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" style="color:dimgrey" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" style="color:dimgray" class="btn btn-light">Cancel</a>
    </form>
</div>


