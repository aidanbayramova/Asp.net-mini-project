@model ProductVMVC
<div class="product-section section pt-70 pb-60">
    <div class="container">


        <div class="row">
            <div class="section-title text-center col mb-60">
                <h1>Featured Products</h1>
            </div>
        </div>

        <div class="row">


            @foreach (var item in Model.Products)
            {
   
                <div class="col-lg-4 col-md-6 col-12 mb-60">

                    <div class="product">


                        <div class="image">
                             <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">
                                <img src="@item.Img" style="height: 330px; width: 375px;" alt="Product" />
                            </a>
                            <a href="#" class="wishlist"><i class="fa fa-heart-o"></i></a>

                            <span class="label">New</span>
                        </div>
                        <div class="content">                 
                            <div class="head fix">                            
                                <div class="title-category float-left">
                                    <h5 class="title"><a href="product-details.html">@item.Name</a></h5>
                                    <a href="shop.html" class="category">@item.CategoryName</a>
                                </div>
                            
                                <div class="price float-right">
                                    <span class="new">@item.Price</span>
                                                                
                                </div>
                            </div>                          
                            <div class="action-button fix">
                                <button class="form-control add-basket" data-id="">Add to cart</button>
                            </div>

                        </div>

                    </div>

                </div>
            }
      

        </div>

    </div>
</div>