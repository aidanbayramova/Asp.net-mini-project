@model IEnumerable<BlogVM>

<div class="blog-section section bg-gray pt-100 pb-60">
    <div class="container">

        <div class="row">
            <div class="section-title text-center col mb-60">
                <h1>Christmas Blog</h1>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="blog-item col-lg-4 col-md-6 col-12 mb-60">
                    <a href="blog-details.html" class="image">
                        <img src="@item.Img" alt="blog" />
                        </a>
                    <div class="content fix">
                        <span class="publish"><span>Published on:</span>@item.CreatedDate.ToString("yyyy-MM-dd")</span>
                        <h4 class="title"><a href="blog-details.html">@item.Title</a></h4>
                        <p>@item.Description</p>
                        <a href="blog-details.html" class="read-more">Read More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>