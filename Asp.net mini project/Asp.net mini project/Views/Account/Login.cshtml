@model LoginVM
<link rel="stylesheet" href="~/css/Login.css">
<section class="sign-in">
    <div class="container">
        <div class="signin-content" style="margin-top: 17pc;">
            <div class="signin-image">
                <figure><img src="~/img/signin-image.jpg"  alt="sing up image"></figure>
                <a asp-controller="Account" asp-action="Register" class="signup-image-link">Create an account</a>
            </div>
            <div class="signin-form">
                <h2 class="form-title">Sign in</h2>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="POST" class="register-form" id="login-form" asp-controller="Account" asp-action="Login">
                    <div class="form-group">
                        <input asp-for="EmailOrUserName" placeholder="Email or username" />
                        <span class="text-danger" asp-validation-for="EmailOrUserName"></span>
                    </div>
                    <div class="form-group" style="position: relative;">
                        <input asp-for="Password" type="password" placeholder="Password" id="passwordInput" style="padding-right: 40px;" />
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <span onclick="togglePassword()" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;">
                            <i class="fa-solid fa-eye"></i>
                        </span>
                    </div>
                   
                    <div class="form-group form-button">
                        <button type="submit" name="signup" id="signup" class="form-submit">Login</button>
                    </div>
                </form>
               
            </div>
        </div>
    </div>
</section>

<script src="https://kit.fontawesome.com/897e067933.js" crossorigin="anonymous"></script>
<script src="~/js/JavaScript.js"></script>